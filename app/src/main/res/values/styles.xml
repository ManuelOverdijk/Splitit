<resources>
<!--
    Base application theme, dependent on API level. This theme is replaced
    by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->
<style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
</style>

    <!-- Application theme. -->
<style name="AppTheme" parent="AppBaseTheme">
    <item name="colorPrimary">@color/material_blue_500</item>
    <item name="colorPrimaryDark">@color/material_blue_700</item>
    <item name="colorAccent">@color/material_blue_grey_950</item>
    <item name="android:textColorPrimary">@color/material_dark_teal_A400</item>
    <item name="android:windowBackground">@color/background_material_light</item>
    <item name="android:buttonStyle">@style/Button</item>
    <item name="windowActionBar">false</item>
<!-- All customizations that are NOT specific to a particular API-level can go here. -->
<!-- <item name="android:actionBarStyle">@style/AppBaseActionBar</item> -->
</style>

<style name="Button" parent="android:style/Widget.Material.Button">
    <item name="android:textSize">19sp</item>
    <item name="android:layout_margin">0dip</item>
    <item name="android:textColorPrimary">@color/bright_foreground_inverse_material_light</item>
    <item name="android:padding">10dp</item>
    <item name="android:background">@color/material_blue_500</item>
</style>
</resources>
    <!-- the theme applied to the application or activity -->